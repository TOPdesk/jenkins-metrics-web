include scripts

mixin javascriptLibraries
  script(src="/vendor/jquery/dist/jquery.min.js")
  script(src="/vendor/Chart.js/dist/Chart.min.js")
  script(src="/javascript/client.js")

mixin styles
  link(rel="stylesheet", type="text/css", href="/vendor/font-lato-2-subset/css/font-lato-2.css")
  link(rel="stylesheet", type="text/css", href="/vendor/components-font-awesome/css/font-awesome.min.css")
  link(rel="stylesheet", type="text/css", href="/stylesheet/default.css")

mixin chartGlobals
  +onDocumentReady
    | Chart.defaults.global.defaultFontFamily = 'Lato, Helvetica, Arial, sans-serif';
    | Chart.defaults.global.defaultFontColor = '#2c3e50';
    | Chart.defaults.global.tooltips.titleColor = '#ecf0f1';
    | Chart.defaults.global.tooltips.bodyColor = '#ecf0f1';
    | Chart.defaults.global.tooltips.footerColor = '#ecf0f1';
    | Chart.defaults.global.tooltips.backgroundColor = '#2c3e50';
