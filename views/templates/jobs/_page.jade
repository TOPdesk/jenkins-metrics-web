include ../../mixins/scripts
.page-main
  header
    h1
      a#previous-job(href="#") ◀
      span #{name}
      a#next-job(href="#") ▶

  nav.pages
    ul
      li
        a(href="#!#{name}/builds",class="#{page === 'builds' ? 'active' : ''}") Build times
      li
        a(href="#!#{name}/tests",class="#{page === 'tests' ? 'active' : ''}") Test results

  block content
.page-footer

+onDocumentReady
  include ../scripts/updateNavigationLinks.js
  | updateNavigationLinks('#{name}');
